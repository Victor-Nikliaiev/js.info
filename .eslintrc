{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": 0,
    "indent": 0
  },
  "parserOptions": {
    "sourceType": "module"
  }
}

// solve import errors from: https://github.com/AtomLinter/linter-eslint/issues/462
